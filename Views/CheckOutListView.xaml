        <ListView
            ManipulationBoundaryFeedback="OnManipulationBoundaryFeedback"
            Name ="productsList"
                      Grid.Row="1"
                      Grid.ColumnSpan="2" FontSize="35"
            Margin="10" 
            
            ItemsSource="{Binding FelvettCikkek}" HorizontalAlignment="Left" HorizontalContentAlignment="Left">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding productId}" />
                    <GridViewColumn Header="Name" Width="300" DisplayMemberBinding="{Binding productName}" />
                    <GridViewColumn Header="Nr" Width="120" DisplayMemberBinding="{Binding productArticleNumber}" />
                    <GridViewColumn Header="UnitPrice" Width="200" DisplayMemberBinding="{Binding productUnitPrice}" />
                    <GridViewColumn Header="Discount" Width="200" DisplayMemberBinding="{Binding productDiscount}" />
                    <GridViewColumn Header="Value" Width="200" DisplayMemberBinding="{Binding productPrice}" />
                </GridView>
            </ListView.View>
        </ListView>
        <!--<StackPanel
            Grid.Row="0"
            Grid.Column="0"
            FocusManager.FocusedElement="{Binding ElementName=Box}">
            <TextBox Name="Box" />
        </StackPanel>-->
        <Button Style="{StaticResource Libri-button}" Command="{Binding HelpCommand}" Height="100" Margin="10 10 10 10" Grid.Column="0" Grid.Row="3" Background="#FFF7CADA" materialDesign:ButtonAssist.CornerRadius="30">
            <!--<StackPanel>
                <TextBlock Text="Segítségkérés" HorizontalAlignment="Center" FontSize="18"/>
                
            </StackPanel>-->
            <Label>
                <StackPanel>
                    <TextBlock Text="{DynamicResource help}" HorizontalAlignment="Center" FontSize="18"/>
                    <materialDesign:PackIcon Kind="Help" HorizontalAlignment="Center" Width="50" Height="50"/>
                </StackPanel>
            </Label>
        </Button>
        <Button Style="{StaticResource Libri-button}" Click="closeWindow" Height="100" Margin="10 10 10 10" Grid.Column="1" Grid.Row="3" Background="#FFD4D4D4" materialDesign:ButtonAssist.CornerRadius="30">
            <StackPanel>
                <!--<TextBlock Text="Nyelvválasztó" HorizontalAlignment="Center" FontSize="18"/>-->
                <TextBlock Text="{DynamicResource language}" HorizontalAlignment="Center" FontSize="18"/>
                <materialDesign:PackIcon Kind="BookAlphabet" HorizontalAlignment="Center" Width="50" Height="50"/>
            </StackPanel>
        </Button>
        <Button
            IsEnabled="{Binding PaymentEnabled}"
            Command="{Binding FizetesCommand}"
            VerticalAlignment="Bottom"
            Name="visszáruBtn"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Style="{StaticResource Libri-button}"
            Height="100px"
            FontSize="40"
            Margin="10 10 10 10"
            materialDesign:ButtonAssist.CornerRadius="30"
            Cursor="Arrow" Background="#f5f4eb" BorderBrush="White">
            <!--<Label>
                <StackPanel Orientation="Horizontal"
                            >
                    <TextBlock Foreground="#e1aa68" Text="F" FontSize="30"/>
