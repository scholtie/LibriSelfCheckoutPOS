        <materialDesign:Card Padding="32" Margin="16"
                             Grid.ColumnSpan="2" Grid.Row="2">
            <StackPanel>
                <TextBlock
                FontSize="50"
    Margin="20 20 20 20"
    Text="{Binding ProductNameCurrent}" />
                <TextBlock
                FontSize="30"
    Margin="20 20 20 20"
    Text="{Binding ProductArticleNumberCurrent}" />
                <TextBlock
                FontSize="50"
    Margin="20 20 20 20"
    Text="{Binding ProductPriceCurrent}" />
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Padding="32" Margin="16"
                             Grid.ColumnSpan="2">
            <Image Width="auto" VerticalAlignment="Top" HorizontalAlignment="Right" Height="auto" Source="//Templates/Libri/Assets/logo.png" StretchDirection="Both" Stretch="Uniform" />
        </materialDesign:Card>
        <TextBlock  Margin="16"
                   
                    VerticalAlignment="Bottom"
                   FontSize="30">
            <StackPanel Margin="10 10 10 10" Orientation="Horizontal" Grid.ColumnSpan="2">
                <materialDesign:PackIcon Kind="Cart" Width="30" Height="30" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding CheckoutQuantity}"/>
                <TextBlock Text=" db termék"/>
            </StackPanel>
            
           
        </TextBlock>
        
        <!--<materialDesign:Card Padding="32" Margin="16"
                             Grid.Column="0"
                             Grid.Row="1"
                             Grid.RowSpan="2"
