<UserControl x:Class="LibriSelfCheckoutPOS.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibriSelfCheckoutPOS"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource PrimaryHueLightBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button
            Command="{Binding ErtekesitesCommand}"
            Name="ertekesitesBtn"
            Grid.Row="0"
            Grid.Column="0"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            Height="200px"
            VerticalAlignment="Bottom"
            FontSize="60"
            Margin="10 10 10 10"
            materialDesign:ButtonAssist.CornerRadius="100"
            Cursor="Arrow" Background="White" BorderBrush="White">
            <Label>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="#e1aa68" Text="É"/>
                    <TextBlock Text="rtékesítést támogató funkciók"/>
                </StackPanel>
            </Label>
        </Button>
        <Button
            Command="{Binding PenztarmuveletekCommand}"
            Name="penztarmuveletekBtn"
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            Height="200px"
            VerticalAlignment="Top"
            FontSize="60"
            Margin="10 10 10 10"
            materialDesign:ButtonAssist.CornerRadius="100"
            Cursor="Arrow" Background="White" BorderBrush="White">
            <Label>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="#e1aa68" Text="P"/>
                    <TextBlock Text="énztárműveletek"/>
                </StackPanel>
            </Label>
        </Button>
        <Button
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            VerticalAlignment="Bottom"
            Name="mégseBtn"
            Command="{Binding CancelCommand}"
            Grid.Row="1"
            Grid.Column="0"
            Height="200px"
            FontSize="60"
            Margin="10 10 10 10"
            materialDesign:ButtonAssist.CornerRadius="100"
            Cursor="Arrow" Background="#FFFBABAB" BorderBrush="White">
            <Label>
                <StackPanel Orientation="Horizontal"
                            >
                    <materialDesign:PackIcon Kind="ChevronLeft" VerticalAlignment="Center" Width="35" Height="35" />
                    <TextBlock Foreground="#FFE16868" Text="V"/>
                    <TextBlock Text="issza"/>
                </StackPanel>
            </Label>
        </Button>
        <Button
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            VerticalAlignment="Bottom"
            Name="bezarasBtn"
            Command="{Binding CloseCommand}"
            Grid.Row="2"
            Grid.Column="0"
            Height="200px"
            FontSize="60"
            Margin="10 10 10 10"
            materialDesign:ButtonAssist.CornerRadius="100"
            Cursor="Arrow" Background="#FFFF5F5F" BorderBrush="White">
            <Label>
                <StackPanel Orientation="Horizontal"
                            >
                    <TextBlock Text="Kilépés az alkalmazásból"/>
                </StackPanel>
            </Label>
        </Button>
    </Grid>
</UserControl>
